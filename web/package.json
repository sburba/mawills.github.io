{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.15",
    "@types/node": "12.0.10",
    "@types/react": "16.8.22",
    "@types/react-dom": "16.8.4",
    "fp-ts": "^2.0.2",
    "io-ts": "^2.0.0",
    "io-ts-reporters": "^0.0.21",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "3.5.2"
  },
  "scripts": {
    "format": "prettier src/**/*.ts src/**/*.tsx src/**/*.css package.json now.json --write",
    "check-format": "prettier src/**/*.ts src/**/*.tsx src/**/*.css package.json now.json",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "mutation-test": "stryker run",
    "eject": "react-scripts eject",
    "now-dev": "yarn start"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!<rootDir>/node_modules/",
      "!src/__test_support__/**/*",
      "!src/index.tsx",
      "!src/serviceWorker.ts"
    ]
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.0.1",
    "@stryker-mutator/html-reporter": "^2.0.1",
    "@stryker-mutator/jest-runner": "^2.0.1",
    "@stryker-mutator/typescript": "^2.0.1",
    "@testing-library/react": "^8.0.4",
    "@types/wu": "^2.1.39",
    "jest-date-mock": "^1.0.7",
    "jest-dom": "^3.5.0",
    "jest-mock-random": "^1.0.2",
    "prettier": "^1.18.2"
  }
}
